{
  "name": "Raspberry Pi 5 Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:debian-12",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "100gb" #64gb is standard
  },
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/apt-get-install:1": {
      "packages": "build-essential, git, python3-pip, python3-dev"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python"
      ]
    }
  }
}
